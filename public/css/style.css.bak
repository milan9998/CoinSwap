/*Sve za tabelu*/

table.kurs {
    border-collapse: collapse;
    width: 50%;
	
}

table.kurs thead th {
    background-color: rgba(192, 192, 192);
}
table.kurs th, td {
    border: 1px solid black;
    padding: 0.5em;
}
table.kurs td:first-child {
    width: 10em;
}
table.kurs td:nth-child(2) {
    text-align: center;
	width: 5em;
}
table.kurs td:nth-child(3){
	text-align: right;
}
table.kurs td:nth-child(4){
	text-align: right;
}
table.kurs td:last-child{
	text-align: right;
}
table.kurs tr:nth-child(even) {
    background: rgba(204, 229, 255, 60%);
}
table.kurs tr:nth-child(odd){
	background: rgba(153, 204, 255);
}
table.kurs td:nth-child(even) {
    background: rgba(153, 255, 153, 35%);
}



table.konverter tr, td {
	/*border-collapse: collapse;*/
	border: none;
}

@media only screen and (max-width: 700px) {
	body{
		background-image: none;
		background-color: lightgreen;
	}
}



